<style>
    body {
        background-color: burlywood;
    }

    .main-header {
        text-align: center;
        color: rgb(128, 0, 0);
        font-size: 36px;
        text-transform: uppercase;
        font-family: 'Righteous', cursive;
        margin-top: 30px;
        margin-left:20%
    }

  

    .btn {
        background: rgb(128, 0, 0);
        color: white;
        padding: 15px;
        font-family: 'Righteous', cursive;
        width: 30%;

    }

    .form-group {
        color: rgb(128, 0, 0);
    
    }
    footer{
    position: absolute;
    width: 100%;
    bottom:0;
    margin-left: 0;
}
.row{
    border: rgb(128, 0, 0) solid;
    height: auto;
    margin-top: 50px;
  

    
    
}



